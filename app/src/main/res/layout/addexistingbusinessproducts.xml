<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPRODUCT_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT NAME" />

        <EditText
            android:id="@+id/edtPRODUCT_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtName" />

        <SurfaceView
            android:id="@+id/sp_ebp1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtName"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtBRAND_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="BRAND NAME" />

        <EditText
            android:id="@+id/edtBRAND_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone" />

        <SurfaceView
            android:id="@+id/sp2_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtPRINCIPAL_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="PRINCIPAL COMPANY" />

        <EditText
            android:id="@+id/edtPRINCIPAL_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp3_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/ll_projectdelion_ebp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDEALERSINCE_ebp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp1"
                android:text="DEALER SINCE" />

            <LinearLayout
                android:id="@+id/ll_DEALERSINCE_ebp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_DEALERSINCE_ebp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_projectdelion"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:hint="dd/MM/yyyy"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/img_DEALERSINCE_ebp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/et_projectdelion"
                    android:layout_toRightOf="@+id/et_projectdelion"
                    android:contentDescription="@string/img_datepicker"
                    android:src="@drawable/ic_today_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <SurfaceView
            android:id="@+id/sp4_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtMODELOPERATIONAREA_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="OPERATION AREA" />

        <EditText
            android:id="@+id/edtOPERATIONAREA_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp5_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtUNITSYEAR_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="UNITS/YEAR" />

        <EditText
            android:id="@+id/edtUNITSYEAR_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone"
            android:digits="0123456789"
            android:inputType="number"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp6_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtSALESYEAR_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="SALES/YEAR" />

        <EditText
            android:id="@+id/edtSALESYEAR_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone"
            android:digits="0123456789"
            android:inputType="numberDecimal" />

        <SurfaceView
            android:id="@+id/sp7_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtMARGINS_ebp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="MARGIN %" />

        <EditText
            android:id="@+id/edtMARGINS_ebp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:layout_toRightOf="@+id/txtPhone" />

        <SurfaceView
            android:id="@+id/sp8_ebp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_ebp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp2"
                android:background="@drawable/buttondeg"
                android:text="Add"
                android:textColor="@color/list_item_title"
                android:textSize="12sp" />

            <Button
                android:id="@+id/remove_ebp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/add"
                android:background="@drawable/buttondeg"
                android:text="Clear"
                android:textColor="@color/list_item_title"
                android:textSize="12sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lst_ebp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/add"></ListView>
    </LinearLayout>

</ScrollView>