<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPROJECTNAME_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJECT NAME" />

    <EditText
        android:id="@+id/edtPROJECTNAME_present"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtName" />

    <SurfaceView
        android:id="@+id/sp1_present"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtName"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtINDUSTRY_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="INDUSTRY" />

    <EditText
        android:id="@+id/edtINDUSTRY_present"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone" />

    <SurfaceView
        android:id="@+id/sp2_present"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtAPPLICATION_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="APPLICATION" />

    <EditText
        android:id="@+id/edtAPPLICATION_present"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone"
        android:singleLine="true" />

    <SurfaceView
        android:id="@+id/sp3_present"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtPRODUCTREQ_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="PRODUCT REQ" />

    <EditText
        android:id="@+id/edtPRODUCTREQ_present"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone" />

    <SurfaceView
        android:id="@+id/sp4_present"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_present"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp2"
            android:background="@drawable/buttondeg"
            android:text="Save"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />

        <Button
            android:id="@+id/remove_present"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp2"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/add"
            android:background="@drawable/buttondeg"
            android:text="Remove"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lst_present"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/add"></ListView>

</LinearLayout>