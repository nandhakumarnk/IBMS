<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_with_shadow"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_voltage_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_voltage_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN VOLTAGE ( R ) VOLTS"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_voltage_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_voltage_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN VOLTAGE ( Y ) VOLTS"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_voltage_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_voltage_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN VOLTAGE ( B ) VOLTS"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_load_condition_amps_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_load_condition_amps_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN LOAD CONDITION AMPS ( R )"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_load_condition_amps_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_load_condition_amps_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN LOAD CONDITION AMPS ( Y )"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_current_in_load_condition_amps_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_current_in_load_condition_amps_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER CURRENT IN LOAD CONDITION AMPS ( B )"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_dryer_dew_point_indication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_dryer_dew_point_indication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DRYER DEW POINT INDICATION"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_filter_catridge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_filter_catridge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FILTER CATRIDGE(YES/NO)"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_filter_catridge_indication_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_filter_catridge_indication_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FILTER CATRIDGE INDICATION LEVEL(GREEN/YELLOW/RED)"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_filter_catridge_change_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_filter_catridge_change_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FILTER CATRIDGE CHANGE DATE"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp2"
                    android:layout_weight="1"
                    android:background="@drawable/buttondeg"
                    android:text="Save"
                    android:textColor="@color/list_item_title"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/remove_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp2"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/add"
                    android:layout_weight="1"
                    android:background="@drawable/buttondeg"
                    android:text="Clear"
                    android:textColor="@color/list_item_title"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>