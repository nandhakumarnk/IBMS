<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPRODUCT_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MACHINE MODEL" />

    <EditText
        android:id="@+id/edtPRODUCT_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtName" />

    <SurfaceView
        android:id="@+id/sp1_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtName"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtQTY_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="QTY" />

    <EditText
        android:id="@+id/edtQTY_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone" />

    <SurfaceView
        android:id="@+id/sp2_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtFINALPRICE_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="OFFERED PRICE" />

    <EditText
        android:id="@+id/edtFINALPRICE_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <SurfaceView
        android:id="@+id/sp3_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtDELIVERY_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="DELIVERY TERM" />

    <EditText
        android:id="@+id/edtDELIVERY_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <SurfaceView
        android:id="@+id/sp4_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtFREIGHT_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="FREIGHT TERM" />

    <EditText
        android:id="@+id/edtFREIGHT_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone"
        android:singleLine="true" />

    <SurfaceView
        android:id="@+id/sp5_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/txtPAYMENT_byus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:text="PAYMENT TERM" />

    <EditText
        android:id="@+id/edtPAYMENT_byus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toRightOf="@+id/txtPhone"
        android:singleLine="true" />

    <SurfaceView
        android:id="@+id/sp6_byus"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edtPhone"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_byus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp2"
            android:background="@drawable/buttondeg"
            android:text="ADD"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />

        <Button
            android:id="@+id/remove_byus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp2"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/add"
            android:background="@drawable/buttondeg"
            android:text="CLEAR"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lst_byus"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/add"></ListView>

</LinearLayout>