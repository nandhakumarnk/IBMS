<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtINDUSTRYTYEPE_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDUSTRY TYPE" />

        <Spinner
            android:id="@+id/spn_selectindustry_oeminsinfo"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:entries="@array/selectyesno"
            android:prompt="@string/yesno"
            android:spinnerMode="dialog" />

        <SurfaceView
            android:id="@+id/sp1_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtName"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtPROCESSTYPE_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="PROCESS TYPE" />

        <Spinner
            android:id="@+id/spn_selectprocess_oeminsinfo"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:entries="@array/selectyesno"
            android:prompt="@string/yesno"
            android:spinnerMode="dialog" />

        <SurfaceView
            android:id="@+id/sp2_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtMACHINENAME_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="MACHINE NAME" />

        <EditText
            android:id="@+id/edtMACHINENAME_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp3_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtBRANDNAME_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="MACHINE BRAND" />

        <EditText
            android:id="@+id/edtBRANDNAME_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <SurfaceView
            android:id="@+id/sp4_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtMODEL_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="MACHINE MODEL" />

        <EditText
            android:id="@+id/edtMODEL_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp5_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtCOST_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="APRX MACHINE COST" />

        <EditText
            android:id="@+id/edtCOST_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:digits="0123456789"
            android:inputType="number"
            android:layout_toRightOf="@+id/txtPhone"
            android:singleLine="true" />

        <SurfaceView
            android:id="@+id/sp6_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtESTSALESYEAR_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="MACHINE SOLD YEAR" />

        <EditText
            android:id="@+id/edtESTSALESYEAR_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="4"
            android:layout_toRightOf="@+id/txtPhone" />

        <SurfaceView
            android:id="@+id/sp7_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtREGIONSOLD_oeminsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp1"
            android:text="REGION SOLD" />

        <EditText
            android:id="@+id/edtREGIONSOLD_oeminsinfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_toRightOf="@+id/txtPhone"
            android:inputType="textEmailAddress" />

        <SurfaceView
            android:id="@+id/sp8_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edtPhone"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_oeminsinfo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp2"
                android:background="@drawable/buttondeg"
                android:text="ADD"
                android:textColor="@color/list_item_title"
                android:textSize="12sp" />

            <Button
                android:id="@+id/remove_oeminsinfo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/add"
                android:background="@drawable/buttondeg"
                android:text="CLEAR"
                android:textColor="@color/list_item_title"
                android:textSize="12sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lst_oeminsinfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/add"></ListView>
    </LinearLayout>

</ScrollView>